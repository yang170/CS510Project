{
    "name": "Check it",
    "description": "Find reference for selected text",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "./background/background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": [
        "http://localhost/*"
    ],
    "action": {
        "default_popup": "./html/popup.html"
    }
}